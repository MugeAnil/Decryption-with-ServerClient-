package serverclient;
import java.io.*;
import static java.lang.Character.isLowerCase;
import static java.lang.Character.isUpperCase;
import java.net.*;
import java.util.*;

/**
 *
 * @author AnÄ±l
 */
public class Server 
{
    private static ServerSocket servSock;
    private static final int PORT = 1231;
    public static void main(String[] args)
    {
    try
        {
            servSock = new ServerSocket(PORT);
            System.out.println("Waiting for connection...\n");
        }
        catch(IOException ioEx)
        {
            System.out.println("Unable to attach to port!");
            System.exit(1);
        }
    do
    {
        handleClient();
    }
    while (true);
    }
    private static void handleClient()
    {
        Socket link = null;
        String message = null;
        try
        {
            link = servSock.accept();
            Scanner input = new Scanner(link.getInputStream());
            PrintWriter output = new PrintWriter(link.getOutputStream(),true);
            int numMessages = 1;
            message = input.nextLine() ;
            do{
            System.out.println("Data: " + message);
            message = caesar(message);
                //while (!message.equals("AA"))
                //{
                    System.out.println("Decrypted data : " + message);
                    output.println(message);
                    numMessages++;
                    message = input.nextLine();
                    
                 }while (!message.equals("AA"));
               
        }
        catch(IOException ioEx)
        {
            ioEx.printStackTrace();
        }

        try
        {
            //System.out.println("Because of Received Message : " + message);
            System.out.println(" * Closing connection... *");
            link.close();
        }
        catch(IOException ioEx)
        {
            System.out.println("Unable to disconnect!");
            System.exit(1);
        }
        
    }
    static String caesar(String value) {
        int shift = 3 ;
	// Convert to char array.
        
        //value = value.toLowerCase();
	char[] buffer = value.toCharArray();

	// Loop over characters.
	for (int i = 0; i < buffer.length; i++) {

	    // Shift letter, moving back or forward 26 places if needed.
	    char letter = buffer[i];
            if (isLowerCase(letter))
            { 
                letter = (char) (letter - shift);

                if ((letter < 'a') )  {
                    letter = (char) (letter + 26);
                } else if ( (letter > 'z') ) {
                    letter = (char) (letter - 26);
                }
                buffer[i] = letter;
            }
            if (isUpperCase(letter))
            { 
                letter = (char) (letter - shift);

                if ((letter < 'A') )  {
                    letter = (char) (letter + 26);
                } else if ( (letter > 'Z') ) {
                    letter = (char) (letter - 26);
                }
                buffer[i] = letter;
            }
            
	}
        
	// Return final string.
	return new String(buffer);
    }

}
